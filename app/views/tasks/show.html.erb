<div class="task-card">
<h1><%= @task.title %></h1>
<h3><%= @task.details %></h3>
<p><%= @task.completed %></p>

<ul class= "options">
      <li><%= link_to "Delete", task_path(@task), method: :delete %></li>
      <li><%= link_to "Edit", edit_task_path(@task.id) %></li>
    </ul>
<br>
<%= link_to 'Back to tasks', tasks_path  %>
</div>
